{
    "ver": "0.0.1",
    "authors": [
        "gaprice"
    ],
    "contact": "help@kbase.us",
    "categories": ["active", "assembly"],
    "widgets": {
        "input": null,
        "output": "kbaseReportView"
    },
    "parameters": [ 
        {
            "id": "read_libraries",
            "optional": false,
            "advanced": false,
            "allow_multiple": true,
            "default_values": [ "" ],
            "field_type": "text",
            "text_options": {
                "valid_ws_types": ["KBaseFile.PairedEndLibrary", "KBaseAssembly.PairedEndLibrary"]
            }
        },
        {
            "id": "dna_source",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [""],
            "field_type" : "dropdown",
            "dropdown_options":{
            "options": [
                {
                 "value": "standard",
                 "display": "standard"
                },
                {
                  "value": "single_cell",
                  "display": "single cell"
                },
                {
                  "value": "metagenomic",
                  "display": "metagenomic"
                }
              ]
            }
        },
        {
            "id": "output_contigset_name",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": ["SPAdes.contigs"],
            "field_type": "text",
            "text_options": {
                "valid_ws_types" : [ "KBaseGenomes.ContigSet" ],
                "is_output_name":true
            }
        }
    ],
    "behavior": {
        "service-mapping": {
            "url": "",
            "name": "gaprice_SPAdes",
            "method": "run_SPAdes",
            "input_mapping": [
                {
                    "narrative_system_variable": "workspace",
                    "target_property": "workspace_name"
                },
                {
                    "input_parameter": "read_libraries",
                    "target_property": "read_libraries"
                },
                {
                    "input_parameter": "output_contigset_name",
                    "target_property": "output_contigset_name"
                },
                {
                    "input_parameter": "dna_source",
                    "target_property": "dna_source"
                }
            ],
            "output_mapping": [
                {
                    "service_method_output_path": [0,"report_name"],
                    "target_property": "report_name"
                },
                {
                    "service_method_output_path": [0,"report_ref"],
                    "target_property": "report_ref"
                },
                {
                    "constant_value": "5",
                    "target_property": "report_window_line_height"
                },
                {
                    "service_method_output_path": [0],
                    "target_property": "SPAdes_result"
                },
                {
                    "input_parameter": "read_libraries",
                    "target_property": "input_read_libraries"
                },
                {
                    "input_parameter": "output_contigset_name",
                    "target_property": "input_output_contigset_name"
                },
                {
                    "input_parameter": "dna_source",
                    "target_property": "input_dna_source"
                },
                {
                    "narrative_system_variable": "workspace",
                    "target_property": "workspace_name"
                }
            ]
        }
    },
    "job_id_output_field": "docker"
}